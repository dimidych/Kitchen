@model MvcStudy.Models.SettingsViewModel

@{
    ViewBag.Title = "Настройки";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        Настройки
    </div>

    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.ckey)
            @Html.HiddenFor(model => model.CookieName)

            <div class="form-group">
                <label for="BaseHostAddress">
                    Базовый адрес сайта :
                </label>
                @Html.ValidationMessage("BaseHostAddress", new {@class = "text-danger"})<br />
                @Html.TextBoxFor(model => model.BaseHostAddress, new {@class = "form-control", placeholder = "Введите базовый адрес сайта"})
            </div>
            <div class="form-group">
                <label for="MailHost">
                    Адрес почтового сервера :
                </label>
                @Html.ValidationMessage("MailHost", new {@class = "text-danger"})<br />
                @Html.TextBoxFor(model => model.MailHost, new {@class = "form-control", placeholder = "Введите адрес почтового сервера"})
            </div>
            <div class="form-group">
                <label for="MailHostLogin">
                    Логин почтового сервера :
                </label>
                @Html.ValidationMessage("MailHostLogin", new {@class = "text-danger"})<br />
                @Html.TextBoxFor(model => model.MailHostLogin, new {@class = "form-control", placeholder = "Введите логин почтового сервера", @type="email"})
            </div>
            <div class="form-group">
                <label for="MailHostPwd">
                    Пароль почтового сервера :
                </label>
                @Html.ValidationMessage("MailHostPwd", new {@class = "text-danger", @type = "number"})<br/>
                @Html.PasswordFor(model => model.MailHostPwd, new {@class = "form-control", placeholder = "Использовать старый пароль" })
            </div>
            <div class="form-group">
                <label for="ConfirmMailHostPwd">
                    Подтвердите пароль почтового сервера :
                </label>
                @Html.ValidationMessage("ConfirmMailHostPwd", new { @class = "text-danger", @type = "number" })<br />
                @Html.PasswordFor(model => model.ConfirmMailHostPwd, new { @class = "form-control", placeholder = "Использовать старый пароль" })
            </div>
            <div class="form-group">
                <label for="MailHostPort">
                    Порт исходящих почтовых сообщений :
                </label>
                @Html.ValidationMessage("MailHostPort", new {@class = "text-danger"})<br />
                @Html.TextBoxFor(model => model.MailHostPort, new { @class = "form-control", placeholder = "Введите порт исходящих почтовых сообщений", @type = "number" })
            </div>
            <div class="checkbox">
                <label for="MailHostUseSsl">
                    Сервер использует SSL/TLS
                    @Html.CheckBox("MailHostUseSsl", @Model.MailHostUseSsl??false)
                </label>
            </div>
            <div class="form-group">
                <label for="MailSubjectPattern">
                    Шаблон заголовка почтового сообщения :
                </label>
                @Html.ValidationMessage("MailSubjectPattern", new {@class = "text-danger"})<br />
                @Html.TextAreaFor(model => model.MailSubjectPattern, new { @class = "form-control", placeholder = "Введите шаблон заголовка почтового сообщения", rows = "3" })
            </div>
            <div class="form-group">
                <label for="MailBodyPattern">
                    Шаблон тела почтового сообщения :
                </label>
                @Html.ValidationMessage("MailBodyPattern", new {@class = "text-danger"})<br />
                @Html.TextAreaFor(model => model.MailBodyPattern, new { @class = "form-control", placeholder = "Введите шаблон тела почтового сообщения", rows = "5" })
            </div>

            <div class="container-fluid">
                <input type="submit" value="Сохранить" class="btn btn-primary pull-right" />
            </div>
        }
    </div>

    <div class="panel-footer text-danger">
        * - любые настройки изменяются на свой страх и риск
    </div>
</div>

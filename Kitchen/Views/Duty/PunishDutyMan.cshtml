@model MvcStudy.Models.tbl_people

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Вы точно хотите наказать дежурного?</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        </div>
        @Html.HiddenFor(model => model.id)
        <br/>
        @Html.DisplayFor(model => model.people_name)
    </div>

    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value="Hаказать дежурного" />
        <button class="btn" data-dismiss="modal">Отмена</button>
    </div>
}
@model MvcStudy.Models.User.UserViewModel 

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Подробнее о пользователе</h4>
</div>

<div class="modal-body">
        <div class="form-group">
            <label for="id">
                ID пользователя :
            </label>
            @Html.DisplayFor(model => model.id)
        </div>
        <div class="form-group">
            <label for="people_name">
                ФИО пользователя :
            </label>
            @Html.DisplayFor(model => model.people_name)
        </div>
        <div class="form-group">
            <label for="email">
                E-mail пользователя :
            </label>
            @Html.DisplayFor(model => model.email)
        </div>
        <div class="form-group">
            <label for="GroupName">
                Группа :
            </label>
            @Html.DisplayFor(model => model.GroupName)
        </div>
        <div class="form-group">
            @Html.DisplayFor(model => model.UserTakesMealAsStr)
            &nbsp;
            @Html.DisplayFor(model => model.UserExceptsDutyAsStr)
        </div>
</div> 

<div class="modal-footer">
    <button class="btn" data-dismiss="modal">Закрыть</button>
</div>

@model MvcStudy.Models.Menu.MenuViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Изменение блюда в меню за @Model.DateView</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">Выберите блюдо из списка</div>

            <div class="panel-body ">
                @Html.ActionLink("Редактировать еду", "Index", "Meal", null, new {@class = "btn btn-small btn-primary pull-right"})
                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.date)

            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.id_meal, Model.MealList, new { size = 20, @class= "form-control" })
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value="Изменить блюдо в меню"/>
        <button class="btn" data-dismiss="modal">Отмена</button>
    </div>
}


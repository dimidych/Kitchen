@model MvcStudy.Models.tbl_meal[]

@{
    ViewBag.Title = "Блюда";
}

<div class="panel panel-primary">
    <div class="panel-heading">Блюда</div>

    <div class="panel-body">
        @Html.ActionLink("Добавить новое блюдо", "CreateMeal", "Meal", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary pull-right" })
    </div>
    
    <table class="table table-bordered table-hover table-striped table-condensed">
        @foreach (var meal in Model)
        {
            <tr>
                <td style="width: 20px">
                    <div class="btn-group">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Изменить", "UpdateMeal", new { id = meal.id }, new { data_modal = "" })</li>
                            <li class="divider"></li>
                            <li class="disabled">@Html.ActionLink("Удалить", "DeleteMeal", new { id = meal.id }, new { data_modal = "" })</li>
                        </ul>
                    </div>
                </td>
                <td>
                    <small class="text-muted">
                        @Html.DisplayFor(modelItem => meal.id)
                    </small>
                    @Html.DisplayFor(modelItem => meal.meal_name)
                </td>
            </tr>
        }
    </table>

    <div class="panel-footer">Всего записей - @Model.Count()</div>
</div>



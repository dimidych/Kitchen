@model MvcStudy.Models.Menu.MenuViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Добавление блюда в меню за @Model.DateView</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
        <div class="panel panel-primary">
            <div class="panel-heading">Список еды</div>

            <div class="panel-body ">
                @Html.ActionLink("Редактировать еду", "Index", "Meal", null, new {@class = "btn btn-small btn-primary pull-right"})
            </div> 
            
            <table class="table table-bordered table-hover table-striped table-condensed">
                @for (var i = 0; i < Model.MealCollection.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.HiddenFor(model => model.MealCollection[i].id)
                            @Html.DisplayFor(model => model.MealCollection[i].meal_name)
                        </td>
                        <td style="width: 20px">
                            @Html.CheckBoxFor(model => model.MealCollection[i].Selected)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>

    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value="Добавить блюдо в меню" />
        <button class="btn" data-dismiss="modal">Отмена</button>
    </div>
}

@model MvcStudy.Models.tbl_meal

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Вы точно хотите удалить блюдо?</h4>
</div>

<div class="modal-body">
    @Html.DisplayFor(model => model.meal_name)
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.id)

    <div class="modal-footer">
        <input class="btn btn-primary" type="submit" value="Удалить блюдо" />
        <button class="btn" data-dismiss="modal">Отмена</button>
    </div>
}